# ==================================
# KREDENSIAL & KUNCI RAHASIA (WAJIB DIISI)
# ==================================
# Dapatkan dari Developer Tools -> Network -> Request 'graphql' -> Request Headers -> x-access-token
ACCESS_TOKEN="PASTE_SESSION_TOKEN_ANDA_DI_SINI"

# Dapatkan dari halaman game Dice di Stake -> Tab "Fairness"
CLIENT_SEED="PASTE_CLIENT_SEED_ANDA_DI_SINI"


# ==================================
# PENGATURAN DASAR TARUHAN
# ==================================
# Mata uang yang digunakan (e.g., bnb, doge, trx, btc)
CURRENCY="bnb"

# Jumlah taruhan dasar (taruhan awal & saat reset setelah menang)
BASE_BET_AMOUNT=0.0000001


# ==================================
# PENGATURAN STRATEGI PERMAINAN
# ==================================
# Target angka untuk roll (e.g., 98, 50.5, 2)
TARGET=98

# Kondisi taruhan: 'under' atau 'above'
CONDITION="under"


# ==================================
# PENGATURAN STRATEGI MARTINGALE
# ==================================
# Aktifkan Martingale? 'true' untuk aktif, 'false' untuk non-aktif
ENABLE_MARTINGALE=false

# Pengali taruhan jika kalah (hanya berlaku jika ENABLE_MARTINGALE=true)
MARTINGALE_MULTIPLIER=2


# ==================================
# PENGATURAN PERILAKU BOT
# ==================================
# Jeda antar taruhan dalam milidetik (1000 = 1 detik)
BET_DELAY_MS=1500
